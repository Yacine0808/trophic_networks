#include <stdio.h>
#include <stdlib.h>

#define MAX 100

typedef struct {
    int adj[MAX][MAX];
    int num_vertices;
} Graph;

void dfs(Graph *graph, int start, int visited[]) {
    visited[start] = 1;
    printf("Visiting: %d\n", start);

    for (int i = 0; i < graph->num_vertices; i++) {
        if (graph->adj[start][i] == 1 && !visited[i]) {
            dfs(graph, i, visited);
        }
    }
}

int main() {
    Graph graph;
    int visited[MAX] = {0};

    printf("Entrez le nombre de sommets: ");
    scanf("%d", &graph.num_vertices);

    printf("Entrez la matrice d'adjacence:\n");
    for (int i = 0; i < graph.num_vertices; i++) {
        for (int j = 0; j < graph.num_vertices; j++) {
            scanf("%d", &graph.adj[i][j]);
        }
    }

    int start_vertex;
    printf("Entrez le sommet de dÃ©part: ");
    scanf("%d", &start_vertex);

    printf("DFS Traversal:\n");
    dfs(&graph, start_vertex, visited);

    return 0;
}
